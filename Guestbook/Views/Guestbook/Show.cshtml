@model Guestbook.Models.GuestbookEntry /* la view è fortemente tipata */

<h2>Guestbook Entry</h2>
<dl>
    <dt>Name:</dt>
    <dd>@Model.Name</dd>
    <dt>Date Added:</dt>
    <dd>@Model.DateAdded</dd>
    <dt>Message:</dt>
    <dd>@Model.Message</dd>
</dl>
    <p>
        @if (ViewBag.hasPermission)
        {
            @Html.ActionLink("Edit", "Edit", new { id = Model.Id })
        }
        @Html.ActionLink("Back to Entries", "Index")
    </p>
